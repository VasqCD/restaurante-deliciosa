];

const quickLinks = [
  { href: '/', label: 'Inicio' },
  { href: '/menu', label: 'Menú' },
  { href: '/nosotros', label: 'Nosotros' },
  { href: '/galeria', label: 'Galería' }
];

const contactInfo = {
  address: 'Calle Principal 123, Tegucigalpa, Honduras',
  phone: '+504 2234-5678',
  email: 'info@ladeliciosa.hn',
  hours: 'Lun-Dom: 11:00 AM - 10:00 PM'
};
---

<footer class="bg-gray-900 text-white">
  <div class="max-w-7xl mx-auto py-12 px-4 sm:px-6 lg:px-8">
    <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
      
      <!-- About Section -->
      <div class="col-span-1 md:col-span-2">
        <h3 class="font-display text-2xl font-bold text-amber-500 mb-4">La Deliciosa</h3>
        <p class="text-gray-300 mb-6 leading-relaxed">
          Auténtica cocina tradicional con un toque moderno. Más de 20 años brindando experiencias 
          gastronómicas únicas en el corazón de Tegucigalpa.
        </p>
        <div class="flex space-x-4">
          {socialLinks.map(social => (
            <a 
              href={social.href} 
              class="text-gray-300 hover:text-amber-500 transition-colors group"
              aria-label={`Seguir en ${social.name}`}
              target={social.href.startsWith('http') ? '_blank' : '_self'}
              rel={social.href.startsWith('http') ? 'noopener noreferrer' : undefined}
            >
              <svg class="h-6 w-6 group-hover:scale-110 transition-transform duration-200" fill="currentColor" viewBox="0 0 24 24">
                <path d={social.icon}></path>
              </svg>
            </a>
          ))}
        </div>
      </div>
      
      <!-- Quick Links -->
      <div>
        <h4 class="text-lg font-semibold mb-4 text-amber-400">Enlaces Rápidos</h4>
        <ul class="space-y-2">
          {quickLinks.map(link => (
            <li>
              <a 
                href={link.href} 
                class="text-gray-300 hover:text-amber-400 transition-colors block py-1"
              >
                {link.label}
              </a>
            </li>
          ))}
          <li>
            <a 
              href="/contacto" 
              class="text-gray-300 hover:text-amber-400 transition-colors block py-1"
            >
              Contacto
            </a>
          </li>
          <li>
            <a 
              href="/reservas" 
              class="text-amber-500 hover:text-amber-400 font-semibold transition-colors block py-1"
            >
              Reservar Mesa
            </a>
          </li>
        </ul>
      </div>
      
      <!-- Contact Info -->
      <div>
        <h4 class="text-lg font-semibold mb-4 text-amber-400">Contacto</h4>
        <div class="space-y-3 text-gray-300 text-sm">
          <div class="flex items-start space-x-2">
            <svg class="w-4 h-4 mt-0.5 text-amber-500 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
            </svg>
            <span>{contactInfo.address}</span>
          </div>
          
          <div class="flex items-center space-x-2">
            <svg class="w-4 h-4 text-amber-500 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
            </svg>
            <a href={`tel:${contactInfo.phone.replace(/\s+/g, '')}`} class="hover:text-amber-400 transition-colors">
              {contactInfo.phone}
            </a>
          </div>
          
          <div class="flex items-center space-x-2">
            <svg class="w-4 h-4 text-amber-500 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
            </svg>
            <a href={`mailto:${contactInfo.email}`} class="hover:text-amber-400 transition-colors">
              {contactInfo.email}
            </a>
          </div>
          
          <div class="flex items-start space-x-2">
            <svg class="w-4 h-4 mt-0.5 text-amber-500 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            <div>
              <p class="font-medium text-white">Horarios</p>
              <p>{contactInfo.hours}</p>
            </div>
          </div>
        </div>
      </div>
    </div>
    
    <!-- Bottom Section -->
    <div class="border-t border-gray-800 mt-8 pt-8">
      <div class="flex flex-col md:flex-row justify-between items-center space-y-4 md:space-y-0">
        <p class="text-gray-400 text-sm text-center md:text-left">
          &copy; {currentYear} Restaurante La Deliciosa. Todos los derechos reservados.
        </p>
        <div class="flex space-x-6 text-sm">
          <a href="#" class="text-gray-400 hover:text-amber-400 transition-colors">
            Política de Privacidad
          </a>
          <a href="#" class="text-gray-400 hover:text-amber-400 transition-colors">
            Términos de Servicio
          </a>
        </div>
      </div>
    </div>
  </div>
</footer>