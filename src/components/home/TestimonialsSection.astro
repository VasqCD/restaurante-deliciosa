---
// src/components/home/TestimonialsSection.astro
import SectionHeader from '../ui/SectionHeader.astro';

const testimonials = [
  {
    name: "María González",
    role: "Cliente frecuente",
    rating: 5,
    comment: "La mejor experiencia gastronómica en Tegucigalpa. El ambiente es perfecto para una cena romántica y la comida simplemente espectacular.",
    avatar: "https://images.unsplash.com/photo-1494790108755-2616b332c5eb?ixlib=rb-4.0.3&auto=format&fit=crop&w=100&q=80"
  },
  {
    name: "Carlos Mendoza",
    role: "Empresario",
    rating: 5,
    comment: "Cada vez que tengo invitados importantes los traigo aquí. La atención es excepcional y los sabores auténticos de Honduras están perfectamente balanceados.",
    avatar: "https://images.unsplash.com/photo-1472099645785-5658abf4ff4e?ixlib=rb-4.0.3&auto=format&fit=crop&w=100&q=80"
  },
  {
    name: "Ana Flores",
    role: "Food Blogger",
    rating: 5,
    comment: "Un lugar mágico donde cada comida se convierte en una celebración. La baleada especial es la mejor que he probado en mi vida.",
    avatar: "https://images.unsplash.com/photo-1438761681033-6461ffad8d80?ixlib=rb-4.0.3&auto=format&fit=crop&w=100&q=80"
  }
];

// Función para generar estrellas
const generateStars = (rating: number) => {
  return Array.from({ length: 5 }, (_, index) => ({
    filled: index < rating
  }));
};
---

<section class="py-20 bg-gray-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <SectionHeader 
      title="Lo que Dicen Nuestros Clientes"
      highlight="Nuestros Clientes"
    />
    
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      {testimonials.map(testimonial => (
        <div class="bg-white p-8 rounded-lg shadow-lg hover:shadow-xl transition-shadow duration-300">
          <!-- Rating Stars -->
          <div class="flex text-amber-500 mb-4">
            {generateStars(testimonial.rating).map(star => (
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
              </svg>
            ))}
          </div>
          
          <!-- Testimonial Text -->
          <p class="text-gray-700 mb-6 italic leading-relaxed">
            "{testimonial.comment}"
          </p>
          
          <!-- Author Info -->
          <div class="flex items-center">
            <img 
              src={testimonial.avatar}
              alt={testimonial.name}
              class="w-12 h-12 rounded-full mr-4 object-cover"
              loading="lazy"
            />
            <div>
              <h4 class="font-semibold text-gray-900">{testimonial.name}</h4>
              <p class="text-gray-600 text-sm">{testimonial.role}</p>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>