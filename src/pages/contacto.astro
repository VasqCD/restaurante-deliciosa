---
// src/pages/contacto.astro - Refactorizada
import Layout from '../layouts/Layout.astro';
import HeroSection from '../components/shared/HeroSection.astro';
import ContactForm from '../components/shared/ContactForm.astro';
import Card from '../components/ui/Card.astro';
---

<Layout 
  title="Contacto - Restaurante La Deliciosa | Ubicación y Horarios"
  description="Contáctanos para reservaciones, consultas o comentarios. Estamos ubicados en el corazón de Tegucigalpa. Teléfono, dirección y horarios de atención."
  keywords="contacto restaurante, ubicación Tegucigalpa, teléfono restaurante, horarios, reservaciones, dirección"
>
  <!-- Hero Section -->
  <HeroSection
    title="Contáctanos"
    subtitle="Estamos aquí para atenderte. Envíanos un mensaje o visítanos en nuestro restaurante"
    variant="gradient"
    size="md"
  />

  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
      
      <!-- Contact Form -->
      <ContactForm />
      
      <!-- Contact Information -->
      <div class="space-y-8">
        
        <!-- Contact Details Card -->
        <Card variant="hover" class="bg-amber-50">
          <h2 class="font-display text-2xl font-bold text-gray-900 mb-6">
            Información de Contacto
          </h2>
          
          <div class="space-y-6">
            <div class="flex items-start space-x-4">
              <div class="flex-shrink-0 w-8 h-8 bg-amber-600 rounded-full flex items-center justify-center">
                <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                </svg>
              </div>
              <div>
                <p class="font-semibold text-gray-900">Dirección</p>
                <p class="text-gray-600">Calle Principal 123, Colonia Palmira, Tegucigalpa</p>
              </div>
            </div>
            
            <div class="flex items-start space-x-4">
              <div class="flex-shrink-0 w-8 h-8 bg-amber-600 rounded-full flex items-center justify-center">
                <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                </svg>
              </div>
              <div>
                <p class="font-semibold text-gray-900">Teléfono</p>
                <p class="text-gray-600">+504 2234-5678</p>
              </div>
            </div>
            
            <div class="flex items-start space-x-4">
              <div class="flex-shrink-0 w-8 h-8 bg-amber-600 rounded-full flex items-center justify-center">
                <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                </svg>
              </div>
              <div>
                <p class="font-semibold text-gray-900">Email</p>
                <p class="text-gray-600">info@ladeliciosa.hn</p>
              </div>
            </div>
            
            <div class="flex items-start space-x-4">
              <div class="flex-shrink-0 w-8 h-8 bg-amber-600 rounded-full flex items-center justify-center">
                <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
              </div>
              <div>
                <p class="font-semibold text-gray-900">Horarios</p>
                <p class="text-gray-600">Lun-Dom: 11:00 AM - 10:00 PM</p>
              </div>
            </div>
          </div>
          
          <a 
            href="https://maps.google.com/?q=Tegucigalpa,Honduras" 
            target="_blank"
            rel="noopener noreferrer"
            class="inline-block mt-6 bg-amber-600 hover:bg-amber-700 text-white px-6 py-2 rounded-lg font-semibold transition-colors"
          >
            Ver en Google Maps
          </a>
        </Card>
        
        <!-- Transportation Info -->
        <Card variant="default">
          <h3 class="font-display text-xl font-bold text-gray-900 mb-4">
            Cómo Llegar
          </h3>
          <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
            <div class="text-center">
              <div class="w-12 h-12 bg-amber-600 rounded-full flex items-center justify-center mx-auto mb-3">
                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                </svg>
              </div>
              <h4 class="font-semibold text-gray-900 mb-2">Estacionamiento</h4>
              <p class="text-gray-600 text-sm">Amplio estacionamiento gratuito disponible</p>
            </div>
            
            <div class="text-center">
              <div class="w-12 h-12 bg-amber-600 rounded-full flex items-center justify-center mx-auto mb-3">
                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 20l-5.447-2.724A1 1 0 013 16.382V5.618a1 1 0 011.447-.894L9 7m0 13l6-3m-6 3V7m6 10l4.553 2.276A1 1 0 0021 18.382V7.618a1 1 0 00-.553-.894L15 4m0 13V4m0 0L9 7"></path>
                </svg>
              </div>
              <h4 class="font-semibold text-gray-900 mb-2">Transporte Público</h4>
              <p class="text-gray-600 text-sm">Fácil acceso por rutas principales</p>
            </div>
            
            <div class="text-center">
              <div class="w-12 h-12 bg-amber-600 rounded-full flex items-center justify-center mx-auto mb-3">
                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z"></path>
                </svg>
              </div>
              <h4 class="font-semibold text-gray-900 mb-2">Delivery</h4>
              <p class="text-gray-600 text-sm">Servicio a domicilio disponible</p>
            </div>
          </div>
        </Card>
      </div>
    </div>
  </div>
</Layout>